<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RiderCancelActivity">

    <Button
        android:id="@+id/orderNewDriver"
        android:layout_width="match_parent"
        android:layout_height="286dp"
        android:background="#94dd02"
        android:text="ORDER NEW DRIVER?"
        android:textSize="36sp" />

    <Button
        android:id="@+id/cancelTrip"
        android:layout_width="match_parent"
        android:layout_height="281dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/orderNewDriver"
        android:background="@android:color/holo_red_dark"
        android:text="CANCEL TRIP"
        android:textSize="36sp" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_rider_cancel" />

</RelativeLayout>