<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="#172851" />

    <ImageView
        android:id="@+id/ivBackgroundFind"
        android:layout_width="500dp"
        android:layout_height="415dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/spaceship_dark"
        android:scaleType="fitXY"
        android:src="@color/colorPrimaryDark"
        app:srcCompat="@drawable/spaceship_dark" />

    <TextView
        android:id="@+id/tvPrepare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="157dp"
        android:text="PREPARING"
        android:textColor="#D7EFFF "
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTakeoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="83dp"
        android:text="FOR TAKEOFF"
        android:textColor="#D7EFFF "
        android:textSize="50sp"
        android:textStyle="bold" />

</RelativeLayout>