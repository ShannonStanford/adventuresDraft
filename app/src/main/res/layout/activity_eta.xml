<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluegrad"
    tools:context=".ongoingflow.DriverInfoActivity">

    <ImageView
        android:id="@+id/ivDriverPic"
        android:layout_width="137dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="114dp"
        android:layout_toStartOf="@+id/btCallDriver"
        app:srcCompat="@drawable/driver" />

    <TextView
        android:id="@+id/tvDriverName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:layout_toEndOf="@+id/tvEta"
        android:text="Mark Zuckerberg"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tvCarMake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvDriverName"
        android:layout_marginTop="306dp"
        android:text="Toyota"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvCarModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvCarMake"
        android:layout_toEndOf="@+id/tvCarMake"
        android:text=" Corolla"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvCarLicense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tvDriverName"
        android:layout_marginBottom="294dp"
        android:text="License#"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvEta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="101dp"
        android:layout_marginStart="167dp"
        android:text="5"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="36dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btCallDriver"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btCancel"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mapicon" />

    <Button
        android:id="@+id/btCancel"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btDriverMap"
        android:layout_marginEnd="52dp"
        android:background="@drawable/cancelicon" />

    <Button
        android:id="@+id/btDriverMap"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/phoneicon" />

    <ImageView
        android:id="@+id/ivCar"
        android:layout_width="138dp"
        android:layout_height="118dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ivDriverPic"
        android:layout_marginBottom="260dp"
        app:srcCompat="@drawable/sample_car" />

    <View
        android:id="@+id/divider3"
        android:layout_width="364dp"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="228dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="169dp"
        android:text="Your ride will be arriving in"
        android:textColor="@android:color/background_light"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/driverrating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvDriverName"
        android:layout_marginTop="187dp"
        android:text="TextView"
        android:textColor="@android:color/background_light"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvDriverName"
        android:layout_alignTop="@+id/tvEta"
        android:text=" min"
        android:textColor="@android:color/background_light"
        android:textSize="36dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/driverinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="Driver Info"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold" />


</RelativeLayout>