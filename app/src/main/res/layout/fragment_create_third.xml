<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Create_Flow.Fragment.CreateThirdFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/overview"
        android:layout_width="358dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="Overview"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/pickup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pickup_ans"
        android:layout_below="@+id/pickup_ans"
        android:text="Pick up location"
        android:textColor="#a9a9a9"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/pickup_ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/pickup_lo"
        android:layout_marginStart="104dp"
        android:text="Pickup Ans"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pickup"
        android:layout_below="@+id/city_ans"
        android:text="City of Interest"
        android:textColor="#a9a9a9" />

    <TextView
        android:id="@+id/city_ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/pickup"
        android:layout_marginTop="255dp"
        android:text="City Ans"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pickup"
        android:layout_below="@+id/price_ans"
        android:layout_marginTop="-201dp"
        android:text="Total Price Cap"
        android:textColor="#a9a9a9" />

    <TextView
        android:id="@+id/price_ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/pickup"
        android:layout_marginBottom="201dp"
        android:text="Price Ans"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/num_peeps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pickup"
        android:layout_below="@+id/num_peeps_ans"
        android:layout_marginTop="-290dp"
        android:text="Total Number of People"
        android:textColor="#a9a9a9"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/num_peeps_ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/pickup"
        android:layout_marginBottom="290dp"
        android:text="numPeepsAns"
        android:textColor="@color/uber_black"
        android:textSize="18dp" />

    <Button
        android:id="@+id/create"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/white"
        android:elevation="15dp"
        android:text="Create" />

    <ImageView
        android:id="@+id/dollar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/group"
        android:layout_alignTop="@+id/price_ans"
        android:src="@drawable/dollar" />

    <ImageView
        android:id="@+id/group"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/end_loc"
        android:layout_alignTop="@+id/num_peeps_ans"
        android:src="@drawable/group" />

    <ImageView
        android:id="@+id/end_loc"
        android:layout_width="43dp"
        android:layout_height="39dp"
        android:layout_alignTop="@+id/city_ans"
        android:layout_toStartOf="@+id/pickup"
        android:src="@drawable/maps" />

    <ImageView
        android:id="@+id/pickup_lo"
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="163dp"
        android:layout_toStartOf="@+id/pickup"
        android:src="@drawable/gps" />

    <ImageView
        android:id="@+id/arrow_l"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/create"
        android:layout_marginTop="-62dp"
        android:layout_marginBottom="12dp"
        android:rotation="180"
        android:src="@drawable/arrow" />


</RelativeLayout>