<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ongoingflow.EventInfoActivity">

    <TextView
        android:id="@+id/tvLocationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivEvent"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/medium"
        android:text="Location Name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/continueAdventure"
        android:layout_width="325dp"
        android:layout_height="139dp"
        android:layout_below="@+id/description"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded2"
        android:fontFamily="@font/lemon"
        android:text="ADVENTURE FURTHER"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/ivEvent"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btHome"
        android:layout_marginTop="5dp"
        android:src="@android:color/holo_blue_dark" />

    <Button
        android:id="@+id/btHome"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/homeiconb" />

    <RatingBar
        android:id="@+id/locationRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLocationName"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@color/yellow"
        android:numStars="5"
        android:rating="5"
        android:theme="@style/RatingBar"
        android:visibility="visible" />

    <TextView
        android:id="@+id/description"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/locationRating"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Poppping Japanese Restaurant with San Francisco's best sea food."
        android:textColor="@color/black"
        android:textSize="20dp" />

</RelativeLayout>